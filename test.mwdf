<var>
    # this is a comment #
    # data types: #
    $my_font: @ft = "mono";
    $my_font_2: @ft = "sans serif";
    $content: @str = "yeah";
    
    $template = { $a: @str, $b: @int } -> {
        <label>
        # this is a mark #
        *property | @inherit(parent):
            ^position: @copy(parent) + ($b, $b);
        </label>
    };
</var>
<canvas>
    <panel>

    *property:
        ^position: # this is a vector # (20, 30);
        ^size: (10, 10);

    *tag:
        <label>
        *property | @inherit(parent):
            ^position: @inherit(parent);
            ^size: (10%, 10%);
            ^text: "Hello" + $my_font + $content + "World!";
        </label>
    
    </panel>
</canvas>